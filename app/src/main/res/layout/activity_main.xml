<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|clip_horizontal|clip_vertical|top"
            android:background="@color/black">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="-30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/icon_line"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/icon_margin_bottom">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/business_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/icon_ywjs" />
                    <TextView
                        android:id="@+id/tv_business_update_notify"
                        android:layout_alignRight="@+id/business_image_view"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/shape_update_flag"
                        android:visibility="gone"
                        android:layout_height="8dp"
                        android:layout_width="8dp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/i3d_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_3d" />

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/event_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/icon_jchg" />
                    <TextView
                        android:id="@+id/tv_event_update_notify"
                        android:layout_alignRight="@+id/event_image_view"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/shape_update_flag"
                        android:visibility="gone"
                        android:layout_height="8dp"
                        android:layout_width="8dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/download_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/icon_zlxz" />
                    <TextView
                        android:id="@+id/tv_image_update_notify"
                        android:layout_alignRight="@+id/download_image_view"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/shape_update_flag"
                        android:visibility="gone"
                        android:layout_height="8dp"
                        android:layout_width="8dp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/solution_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_dljjfa" />

                <ImageView
                    android:id="@+id/contact_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_lxwm" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
